include "grep.mi"

function summary($matches) {
    $count = len($matches)

    if ($count == 0) {
        printf("No matches\n");
    } else {
        printf($count, " matches:\n\n");
        $i = 0
        while ($i < $count) {
            printf($matches[$i], "\n");
            $i += 1
        }
    }
}

$items = ["juanma", "Alexia", "pedro", "JUANA", "maria", "JULIO"]

$matches = grep($items, /^J/)
summary($matches)

printf("---\n");

summary(grep($items, /a$/))
